{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "Node16",
    "rootDir": "./",
    "moduleResolution": "node16",
    "outDir": "dist",
    "removeComments": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tailwind-plugin.ts"]
}
